@using MeetingRoomBookingSystem.Models
@{
    ViewBag.Title = "Home Page";
}

@{
    var database = new MeetingRoomBookingSystemDbContext();
    var offices = database
        .Offices
        .ToList();

    var users = database
        .Users
        .ToList();
}

<div class="row">
    <div class="col-sm-6">
        @foreach (var office in offices)
        {
            <div class="col-sm-3">
                <article>
                    <header>
                        <h2>
                            @Html.ActionLink(@office.Name, "Details", "Office", new { @id = office.Id }, null)
                        </h2>
                    </header>
                    <div>@office.Address</div>
                    <div>@office.PhoneNumber</div>
                    <div>@office.IsActive</div>
                </article>
            </div>
        }

    </div>
    <div class="col-sm-6">
        <h3>Users</h3>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Is Active</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var user in users)
                {
                    @:<tr>
                        <td>@user.Id</td>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.IsActive</td>
                }

        </tbody>
    </table>

    </div>
</div>