@model MeetingRoomBookingSystem.Models.Office

@{
    ViewBag.Title = "Details";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <article>
                <header>
                    <h2>
                        @Model.Name
                    </h2>
                </header>
                <h4>@Model.Address</h4>
                <h4>@Model.PhoneNumber</h4>
            </article>
            <footer>
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edit", "Edit", "Office", new { @id = Model.Id }, new { @class = "btn btn-warning" })
                }               
            </footer>
        </div>
        <div class="col-sm-6">
            <article>
                
            </article>
        </div>
    </div>
    <div class="row">
        <h3>Meeting Rooms</h3>
        @foreach (var meetingRoom in Model.MeetingRooms)
            {
            <div class="col-sm-2">
                <article>
                    <header>
                        <h4>
                            @Html.ActionLink(@meetingRoom.Name, "Details", "MeetingRoom", new { @id = meetingRoom.Id }, null)
                        </h4>
                    </header>
                    <div>@meetingRoom.Capacity</div>
                    <div>@meetingRoom.HasWhiteboard</div>
                    <div>@meetingRoom.HasMultimedia</div>
                </article>
            </div>
        }
    </div>
</div>
<hr />

